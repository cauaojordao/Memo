<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Memo</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Memo.styles.css" asp-append-version="true" />
</head>
<body>
	<header class="layout__container" id="1">
		<div class="logo">
			<a asp-controller="Home" asp-action="Index">
				<img src="~/Images/memologo.png" asp-append-version="true" alt="logo" width="306" />
			</a>
		</div>
		<nav class="nav__container">
			<a asp-controller="Home" asp-action="Create">
				<img src="~/Images/newplaylist.png" asp-append-version="true" alt="new playlist" />
			</a>
			<span class="binary">
				01101111 01111000
				01101001
				01100101 01101101 00100000 01100100 01100101 01110110
			</span>
		</nav>
	</header>
	<div>
		<main role="main" class="main__container">
			@RenderBody()
		</main>
	</div>

	<footer class="layout__container" id="2">
		<div class="nav__container">
			<span class="binary">
				01101111 01111000 01101001 01100101 01101101 00100000 01100100 01100101 01110110
			</span>
			<p>by <a>cauã</a> <i class="bi bi-github"></i> </p>
		</div>
	</footer>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
